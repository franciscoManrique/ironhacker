<div class="container fluid">

    {{#if error.notFriend}} 
        <div class="alert alert-danger">{{error.notFriend}}</div>
    {{/if}}

    <div class="row mb-3 headerProfile">
        <div class="col-4">
            <img src="{{user.image}}" alt="profileImg">
        </div>
        <div class="col-8">
            <div class="row">
                <a href="/users/{{user._id}}"><h1>{{upperCase user.name}} {{upperCase user.lastname}}</h1></a>
            </div>
            <div class="row">
                <small>{{user.career}}</small>
            </div>
            <div class="row">
                {{#isAdmin session}}
                <a href="/users/{{../user.id}}/edit">Edit</a>
                {{/isAdmin}}
            </div>

        {{#if error.notFriend}}
        {{else}}
            <div class="row displayInline mt-3">
                <ul> 
                    <li><a href="/users/{{user._id}}/friends/list">Friends <span>{{user.numberOfFriends}}</span></a></li>
                    <li>Photos</li>
                </ul>
            </div>
            {{/if}}

        </div>
    </div>
    
    {{#isOwneredByOwnSession user session}}
    <div class="row">
        <div class="col-10">
            <div class="postWrapper borderRadius m-3 border" style="padding:5px;">
                <form action="/users/{{user.id}}/posts/create" method="POST">

                    <div class="row">
                        <div class="col-4">
                            <img src="{{user.image}}" class="imagePost" alt="image">
                        </div>

                        <div class="col-8 p-3">

                            <input type="text" class="form-control {{#if errors.title}}is-invalid{{/if}}" placeholder="Title" name="title" style="width: 70%; border: none;" class="form-control"/>
                            {{#if errors.title}} <small class="red">{{errors.title}}</small>{{/if}}

                            <textarea class="form-control {{#if errors.text}}is-invalid{{/if}}" style="width: 90%;" id="text" name="text" rows="7" placeholder="Create a post"></textarea>
                             {{#if errors.text}} <small class="red">{{errors.text}}</small>{{/if}}

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" style="width: 100%;">Post</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}

    {{#if error.notFriend}}
    <form action="/friendship/{{user.id}}/create" class="mb-2" method="POST">
        <button type="submit" class="btn btn-primary btn-sm">Follow</button>
    </form>
    {{else}}
    <form action="/friendship/{{user.id}}/create" class="mb-2" method="POST">
        <button type="submit" class="btn btn-danger btn-sm">Unfollow</button>
    </form>
    {{/if}}

 {{/isOwneredByOwnSession}} 

    {{#if posts}}
        {{> posts}}
        {{else}}
        <div class="alert alert-danger">{{user.name}} has not done any post yet</div>
    {{/if}}
</div>
